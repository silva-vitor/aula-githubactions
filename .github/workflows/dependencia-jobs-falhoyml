name: Workflow com Depend de Jobs que Falha

on:
  push:
    branches:
      - main
  pull_request: 
    branches: [ main ]

jobs:
  job1:
    name: Job 1
    runs-on: ubuntu-latest

    steps:
    - name: Passo 1
      run: echo "Passo 1"
    
    - name: Passo 2
      run: echo "Passo 2"
      
    - name: Passo ...
      run: echo "Passo ..."

  job2:
    name: Job 2
    needs: job1
    runs-on: ubuntu-latest
    
    steps:
    - name: Passo 1
      run: echo "Passo 1"
    
    - name: Passo 2
      run: echo "Passo 2"

    - name: Passo Falho
      run: echo "Execução do passo falho" | exit 1

  job3:
    name: Job 3
    needs: job2
    runs-on: ubuntu-latest
    
    steps:
    - name: Passo 1
      run: echo "Passo 1"
    
    - name: Passo 2
      run: echo "Passo 2"
